<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/telep"
    android:padding="16dp">

    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Task Create"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Task Title Input -->
    <EditText
        android:id="@+id/editTextTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Title"
        android:padding="12dp"
        tools:ignore="VisualLintTextFieldSize" />

    <!-- Task Description Input -->
    <EditText
        android:id="@+id/editTextTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Description"
        android:padding="12dp"
        tools:ignore="VisualLintTextFieldSize" />

    <!-- Create Task Button -->
    <Button
        android:id="@+id/btnCreateTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_task"
        android:layout_marginTop="16dp" />


    <!-- Spinner to display tasks -->

    <Spinner
        android:id="@+id/spinnerTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/taskInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Task Information"
        android:textSize="16sp"
        android:textColor="#333333"
        android:background="#FFFFCC"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp"
        android:gravity="center"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnUpdateTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_task"
        android:layout_marginTop="16dp" />

    <!-- Clear Tasks Button -->
    <Button
        android:id="@+id/btnClearTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_tasks"
        android:layout_marginTop="16dp" />

    <!-- Back to Home Button -->
    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Home" />

</LinearLayout>
